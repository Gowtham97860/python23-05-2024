def find_last_duplicate(arr):
    n = len(arr)
    if n == 0:
        print("Invalid array size")
        return
    if n == 1:
        print("No duplicate found")
        return
    last_index = -1
    last_duplicate = -1
    for i in range(n - 1):
        if arr[i] == arr[i + 1]:
            last_index = i + 1
            last_duplicate = arr[i]
    if last_index == -1:
        print("No duplicate found")
    else:
        print(f"Last index: {last_index}")
        print(f"Last duplicate item: {last_duplicate}")

array = [1, 5, 5, 6, 6, 7]
find_last_duplicate(array)
